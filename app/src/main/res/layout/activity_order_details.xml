<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvOrderDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Details"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/tvOrderId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order ID: #123456"
        android:textSize="18sp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/tvTotalAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Amount: $150.00"
        android:textSize="18sp"
        android:layout_marginTop="8dp"/>

    <GridView
        android:id="@+id/gvOrderedItems"
        android:layout_width="match_parent"
        android:layout_height="315dp"
        android:isScrollContainer="false"
        android:numColumns="1"
        android:scrollbars="none"
        android:verticalSpacing="18dp" />

    <TextView
        android:id="@+id/tvReviewLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đánh giá"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"/>

    <RatingBar
        android:id="@+id/rbRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:numStars="5"

        android:stepSize="1.0"
        android:rating="0" />

    <TextView
        android:id="@+id/tvProductReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product Review"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#CD000000"
        android:layout_marginTop="16dp"
        android:layout_gravity="start"/>

    <EditText
        android:id="@+id/etProductReview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Enter your review"
        android:inputType="textMultiLine"
        android:minHeight="100dp"
        android:gravity="top"
        android:padding="10dp"
        android:background="@drawable/edittext_background"/>

    <Button
        android:id="@+id/btnSubmitReview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="Submit"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:background="@drawable/btn_orange"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"/>
</LinearLayout>
