<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="#FFCDD2"/> <!-- Màu nền khi nhấn -->
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <stroke android:width="0dp" android:color="#000000"/> <!-- Viền đen độ dày 2dp -->
            <solid android:color="#00FFFFFF"/> <!-- Màu nền -->
        </shape>
    </item>
</selector>
